extends layout

block content
  h1= title
  p `rows #{query.rows}`
  p `cols #{query.cols}`
  - var rows=Number(query.rows)
  - var cols=Number(query.cols)
  if !(Number.isInteger(rows)) || !(Number.isInteger(cols))
    p No Values given !problem
  else if rows > 6
    p row size is too big
  else if cols > 6
    p column size is too big
  else
   table#outer
    - for(let i=0; i<query.rows; i++) { 
       tr#middle
         - for(let j=0; j<query.cols; j++) { 
           td= (+i + +j) % query.rows
         - }
    - }
      